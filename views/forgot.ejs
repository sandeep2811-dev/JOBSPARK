<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forgot Password - JobSpark</title>
  <style>
    :root{
      --bg: #ffffff;
      --card: #161823;
      --accent: chocolate;
      --muted: #9aa0a6;
      --input-bg: #fff8f3;
      --glass: rgba(255,255,255,0.04);
    }
    html,body{
      height:100%;
      margin:0;
      font-family: "Segoe UI", Roboto, Arial, sans-serif;
      background: black;
    }
    .anchor{ text-decoration:none;  }
    .wrap { min-height:100vh; display:flex; align-items:center; justify-content:center; padding:32px 16px; }
    .card { width:100%; max-width:420px; background:black; border-radius:16px; padding:28px; box-shadow: 0 6px 20px rgba(233,145,62,0.28); }
    .brand { display:flex; align-items:center; gap:14px; margin-bottom:14px; }
    .brand .logo { width:56px; height:56px; border-radius:10px; background: linear-gradient(135deg,#f5e0c3,#fff3ea); }
    .brand h1 { margin:0; font-size:1.25rem; color:var(--accent); }
    .intro { color:var(--muted); font-size:0.95rem; margin-bottom:18px; }
    form { display:flex; flex-direction:column; gap:14px; }
    label { font-weight:600; font-size:0.95rem; color:#f5e0c3; }
    input { width:90%; padding:12px 14px; border-radius:10px; border:1px solid rgba(0,0,0,0.06); background:var(--input-bg); font-size:1rem; outline:none; }
    input:focus{ box-shadow: 0 6px 20px rgba(243,116,32,0.08); border-color: var(--accent); transform: translateY(-2px); background:#fff; }
    .otp-row { display:flex; gap:8px; align-items:center; }
    .small-btn { padding:10px 12px; border-radius:10px; border:none; background:linear-gradient(90deg,var(--accent),#a0522d); color:#fff; cursor:pointer; font-weight:700; box-shadow:0 6px 18px rgba(243,116,32,0.12); }
    .small-btn[disabled]{ opacity:0.6; cursor:not-allowed; }
    .new-password-row { display:none; flex-direction:column; gap:8px; }
    .helper { font-size:0.9rem; color:var(--muted); margin-top:6px; }
    .msg-inline { font-size:0.95rem; color:#f5e0c3; margin-top:6px; }
    .btn { width:100%; padding:12px 14px; background: linear-gradient(90deg, var(--accent) 0%, #a0522d 100%); color:#fff; border:none; border-radius:10px; font-weight:700; cursor:pointer; font-size:1rem; box-shadow: 0 8px 28px rgba(243,116,32,0.12); }
    .loader { border: 3px solid #f3f3f3; border-top: 3px solid #3498db; border-radius: 50%; width: 16px; height: 16px; animation: spin 0.8s linear infinite; display: inline-block; margin-right: 6px; }
    @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    .status { margin-top: 5px; font-size: 14px; color: #f5e0c3; }
    @media (max-width:420px){ .otp-row{ flex-direction:column; align-items:stretch; } .small-btn { width:100%; } }

    /* Modal Popup Styles */
    .modal-backdrop {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      z-index: 9998;
      align-items: center;
      justify-content: center;
    }

    .modal-backdrop.active {
      display: flex;
    }

    .modal-content {
      background: black;
      border-radius: 16px;
      padding: 40px 32px;
      max-width: 420px;
      width: 90%;
      text-align: center;
      box-shadow: 0 10px 40px rgba(233, 145, 62, 0.3);
      border: 1px solid rgba(210, 105, 30, 0.2);
    }

    .modal-content h2 {
      color: chocolate;
      margin: 0 0 16px 0;
      font-size: 1.5rem;
    }

    .modal-content p {
      color: #f5e0c3;
      margin: 0 0 24px 0;
      font-size: 1rem;
    }

    .modal-close-btn {
      width: 100%;
      padding: 12px 14px;
      background: linear-gradient(90deg, chocolate 0%, #a0522d 100%);
      color: #fff;
      border: none;
      border-radius: 10px;
      font-weight: 700;
      cursor: pointer;
      font-size: 1rem;
      box-shadow: 0 8px 28px rgba(243, 116, 32, 0.12);
      transition: transform 0.2s ease;
    }

    .modal-close-btn:hover {
      transform: scale(1.02);
    }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="card" role="main" aria-labelledby="forgot-title">

      <div class="brand">
        <img class="logo" src="/public/logo.jfif" aria-hidden="true">
        <h1 id="forgot-title">Forgot Password</h1>
      </div>

      <div class="intro">Enter the email associated with your JobSpark account. We'll send instructions to reset your password.</div>

      <!-- Server message -->
      <% if (message) { %>
      <div class="msg-inline" role="status" aria-live="polite"><%= message %></div>
      <% } %>

      <form id="forgotForm" method="POST" action="/forgot">
        <input type="hidden" id="actiontype" name="actiontype">

        <!-- Email -->
        <label for="email">Email address</label>
        <input type="email" name="email" id="email" value="<%= email || '' %>" required />

        <!-- OTP -->
        <label for="otp">One-Time Password (OTP)</label>
        <div class="otp-row">
          <input type="text" name="otp" id="otp" placeholder="Enter OTP" />
          <button type="submit" class="small-btn" onclick="document.getElementById('actiontype').value='sendotp'"
            <% if (otpSent) { %>disabled style="opacity:0.6"<% } %>>
            <% if (otpSent) { %>Sent<% } else { %>Send OTP<% } %>
          </button>
          <button type="submit" class="small-btn" onclick="document.getElementById('actiontype').value='verifyotp'"
            <% if (!otpSent || otpVerified) { %>disabled style="opacity:0.6"<% } %>>
            <% if (otpVerified) { %>Verified<% } else { %>Verify OTP<% } %>
          </button>
        </div>

        <!-- New Password -->
        <div class="new-password-row" style="<%= otpVerified ? 'display:flex' : 'display:none' %>">
          <label for="newPassword">New Password</label>
          <input type="password" name="newPassword" id="newPassword" placeholder="New password" />
        </div>

        <!-- Update password -->
        <button type="submit" class="btn" onclick="document.getElementById('actiontype').value='updatepassword'"
          <% if (!otpVerified) { %>disabled style="opacity:0.6"<% } %>>Update Password</button>
          <button type="reset" class="btn" onclick="window.location.href='/'">Cancel</button>
      </form>

    </div>
  </div>

  <!-- Success Modal Popup -->
  <div class="modal-backdrop" id="successModal">
    <div class="modal-content">
      <h2>âœ“ Success</h2>
      <p>Your password has been updated successfully.</p>
      <button class="modal-close-btn" id="closeModalBtn">Go to Home</button>
    </div>
  </div>

  <script>
    const successModal = document.getElementById('successModal');
    const closeModalBtn = document.getElementById('closeModalBtn');
    const submitBtn = document.querySelector('button[onclick*="updatepassword"]');
    const form = document.getElementById('forgotForm');

    // Intercept form submit for update password
    form.addEventListener('submit', async (e) => {
      const actiontype = document.getElementById('actiontype').value;
      
      if (actiontype === 'updatepassword') {
        e.preventDefault();
        
        const formData = new FormData(form);
        const params = new URLSearchParams(formData);

        try {
          const res = await fetch('/forgot', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: params.toString()
          });

          const data = await res.json().catch(() => ({ success: res.ok }));

          if (data && data.success) {
            // Show modal
            successModal.classList.add('active');
          }
        } catch (err) {
          console.error(err);
        }
      }
    });

    // Close modal and redirect
    closeModalBtn.addEventListener('click', () => {
      successModal.classList.remove('active');
      window.location.href = '/';
    });
  </script>
</body>
</html>
